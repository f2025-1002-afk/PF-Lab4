#include <iostream>
using namespace std;

int main() {
   float a,b;
   int choice;
   while(true){
   cout<<"Enter Choice: ";
   cin>>choice;
 
   if(choice>=1 && choice<=4){
       cout<<"Enter Number 'a': ";
       cin>>a;
       cout<<"Enter Number 'b': ";
       cin>>b;
   
   switch(choice){
       case 1:cout<<"Adition Of Two Numbers: "<<a+b<<endl;break;
       case 2:cout<<"Subtraction Of Two Numbers: "<<a-b<<endl;break;
       case 3:cout<<"Multiplication Of Two Numbers: "<<a*b<<endl;break;
       case 4:
       if(b!=0){
           cout<<"Division Of Two Numbers: "<<a/b<<endl;
       }else {
           cout<<"Zero is Not Allowed in Denominator"<<endl;
       }break;
       default:cout<<"Invalid Number Entered"<<endl;break;
   }
   }
   else{
       cout<<"Exit The  program"<<endl;break;
  
   }
   }
   return 0;
   }