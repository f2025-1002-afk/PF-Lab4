#include <iostream>
using namespace std;

int main() {
    int number;
    int evenCount = 0;
    int oddCount = 0;

    while (true) {
        cout << "Enter a number (0 to stop): ";
        cin >> number;
            if (number == 0) {
            break; 
        }
        if (number % 2 == 0) {
            evenCount++;
        } else {
            oddCount++;
        }
       
    }

    cout << "\nTotal even numbers: " << evenCount << endl;
    cout << "Total odd numbers: " << oddCount << endl;

    return 0;
}