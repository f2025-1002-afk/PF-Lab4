#include <iostream>
using namespace std;
int main() {
    int secretNumber = 7; 
    int guess;

    cout << "Guess the secret number!" << endl;

    while (true) {
        cout << "Enter your guess: ";
        cin >> guess;

        if (guess == secretNumber) {
            cout << "Congratulations! You guessed it right!" << endl;
            break; 
        }
        else if (guess > secretNumber) {
            cout << "Too high!" << endl;
        }
        else { 
            cout << "Too low!" << endl;
        }
    }

    return 0;
}